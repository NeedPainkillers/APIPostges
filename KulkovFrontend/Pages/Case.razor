@page "/case"

@using Kulkov.Repository
@using System.Linq
@using System.Collections.Generic
@inject IEmployeeRepository Service

<h1>Case example</h1>


@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Зарплата</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < employees.Count; i++)
            {
                var l = i; //local index
                <tr>
                    <td>@employees[i].id_emp</td>
                    <td>@employees[l].last_name</td>
                    <td>@employees[l].first_name</td>
                    <td>@employees[l].patronymic</td>
                    <td>@employees[l].salary.salary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    
    private List<Kulkov.Data.Employee> employees;


    protected async override Task OnInitializedAsync()
    {
        employees = (await Service.GetAllEmployees()).ToList();
    }
}

